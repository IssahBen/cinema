                </div>

             <% end %>
         <% end %>
          <% unless @redirect_to_page_id %>
              <% if current_user && current_bucket %>
                <li class = "nav-item">
                <%= link_to "Bucket[#{current_bucket.title}]",bucket_path(current_bucket),class:"btn" %>
