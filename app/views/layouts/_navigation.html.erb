<nav class = "navbar navbar-expand-lg bg-body-tertiary">
  <div class = "container-fluid">
    <a class = "navbar-brand" href="<%= root_path %>">Cinema</a>
    <button class = "navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class = "navbar-toggler-icon"></span>
    </button>
    <div class = "collapse navbar-collapse" id="navbarSupportedContent">
      <ul class = "navbar-nav me-auto mb-2 mb-lg-0">

          <% if !logged_in? %>
              <li class = "nav-item">
              <a class = "nav-link" aria-current="page" href="<%= login_path %>">Login <i class="fa-solid fa-right-to-bracket"></i></a>
            </li>
            <li class = "nav-item">
              <a class = "nav-link" href="<%= new_user_path %>">Sign up <i class="fa-regular fa-user-plus"></i></a>
            </li>
          <% else %>
