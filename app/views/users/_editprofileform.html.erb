<div class="container">
  
 

    <div class="row justify-content-center">
            <div class="col-10"> 
           
                  <%= render 'shared/errors', object: @user %>
                
                <%= form_with model: @user, class:"shadow p-3 mb-5 bg-white rounded",local: true do |form| %>

                <div class= "form-group row">

                    <%=form.label :username,class: "col-2 col-form-label text-dark " %>
                    <div class= "col-10">
                        <%= form.text_field :username,class: "form-control rounded",placeholder: "Enter username" %>
                    </div>
                </div>
                    
                <div class="form-group row">
                    <%= form.label :email ,class: "col-2 col-form-label text-dark" %>

                    <div class= "col-10">


                        <%= form.email_field :email , class: "form-control rounded" ,placeholder:"Enter email adress" %>

                    </div>
                </div>
                     <div class="form-group row">
                        <%= form.label :old_password,class: "col-2 col-form-label text-dark" %>

                        <div class= "col-10">


                            <%= form.password_field :old_password , class: "form-control rounded" ,placeholder:"choose a password" %>

                        </div>
                    </div>
                   <div class="form-group row">
                        <%= form.label :new_password,class: "col-2 col-form-label text-dark" %>

                        <div class= "col-10">


                            <%= form.password_field :password , class: "form-control rounded" ,placeholder:"choose a password" %>

                        </div>
                </div>
                    <div class="form-group row">
                        <%= form.label :password_confirmation,class: "col-2 col-form-label text-dark" %>

                        <div class= "col-10">


                            <%= form.password_field :password_confirmation , class: "form-control rounded" ,placeholder:"choose a password" %>

                        </div>
                    </div>

                <div class= "form-group  text-center ">   
                    <%= form.submit 'Save Changes' ,class: "btn btn-outline-primary btn-lg" %>
                </div>

                <% end %>
            </div>

           
    </div>

</div>