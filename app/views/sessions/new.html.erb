

  <h1 class = ' welcome text-center'>Welcome Back!</h1>

<div class = "container">

    <div class = "row justify-content-center">
            <div class=" col-10">

                <%= form_with scope: :session,url:login_path,class:" login-form" ,local: true  do |form| %>

                <div class = "form-group row">
                    <%= form.label :email ,class: "col-2 col-form-label text-light" %>

                    <div class= "col-10">

                        <%= form.email_field :email , class: "form-control rounded" ,placeholder:"Enter email adress" %>

                    </div>
                </div>
                   <div class = "form-group row">
                    <%= form.label :password,class: "col-2 col-form-label text-light" %>

                    <div class= "col-10">

                        <%= form.password_field :password , class: "form-control rounded" ,placeholder:"Enter a password" %>

                    </div>
                </div>
                <div class = "form-group  text-center ">
                    <%= form.submit "Log In", class: "btn btn-success btn-lg" %>
                </div>

                <% end %>
            </div>

    </div>

</div>
